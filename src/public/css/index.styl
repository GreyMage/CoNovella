@css {
	@import url(http://fonts.googleapis.com/css?family=Roboto);
	@import url(http://fonts.googleapis.com/css?family=Bangers);
	@import url(http://fonts.googleapis.com/css?family=Patrick+Hand);
}

vendor(prop, args)
  -webkit-{prop} args
  -moz-{prop} args
  -o-{prop} args
  {prop} args


wallpaper = #e8eaf6
fore-color = #424242
back-color = #c5cae9
contrast-color = #283593
lock-bg = #ffc107;
primary-font = 'Roboto', sans-serif 
button-font = 'Bangers', sans-serif 
story-font = 'Patrick Hand', cursive

body 
	color fore-color
	background wallpaper
	margin 0
	padding 0
	font-family primary-font
	
h1
	font-size 1.2em
	text-align center

#welcome
	background back-color
	height 100%
	width 260px
	padding 0 25px
	position fixed 
	transition 0.7s all
	transform translate(-100%)
	box-shadow 0px 0px 0px
	border-right 0px solid 
	opacity 0
	font-family story-font
	
	&.show
		transform translate(0)
		border-right 1px solid
		box-shadow 0px 0px 10px
		opacity:1;
		
.dismiss
	background contrast-color
	border 1px solid fore-color
	bottom 10px
	left 0
	margin auto
	position absolute
	right 0 
	width 90%
	color back-color
	font-size: 1.5em
	border-radius: 4px
	font-family button-font
	padding 10px 0

.screen
	display none
	&.show
		display block
	
#topList 
	width 500px
	margin 0 auto
	position absolute
	top 50%
	left 0
	right 0
	transform translateY(-50%)
	
	.verbiage
		position absolute
		bottom 0
		margin 5px
		left 0
		pointer-events: none;

	.story 
		height 100px
		background back-color
		margin 5px
		border-radius 10px
		position relative
		overflow hidden
		border 1px solid fore-color
		transform translateZ(0)
		&.new
			font-size 3em
			line-height 100px
			text-align center
			font-family button-font
		
		.title
			position absolute
			background contrast-color
			color back-color
			left 0
			top 0
			height 20px
			line-height 20px
			padding 0 10px 
			transition 0.25s all
			pointer-events none
			white-space nowrap
			
			&:after
				content ""
				display block
				border-top 10px solid contrast-color
				border-left 10px solid contrast-color
				border-right 10px solid rgba(0, 0, 0, 0)
				border-bottom 10px solid rgba(0, 0, 0, 0)
				right -20px
				height 0
				top 0
				width 0
				position absolute
		&:hover
			.access
				transform translateX(50%) translateY(50%)
			.title
				transform translateX(0) translateY(-50%)

@keyframes active-pulse 
	from
		box-shadow 0 0 10px green
		border-color green
	to
		box-shadow 0 0 10px transparent
		border-color transparent
		
@keyframes active-timer 
	from
		height 100%
	to
		height 0%

				
#fullPage 
	left 0
	margin 0 auto
	position absolute
	right 0
	width 500px
	background back-color
	padding 0 20px
	height 100%
	border-left 1px solid fore-color
	border-right 1px solid fore-color
	
	&:before 
	&:after 
		content: "";
		background-color: transparent;
		position: absolute;
		height: 100%;
		width: 10px; 
		bottom 0
	&:before
		left -11px
	&:after
		right -11px
	&.active:before 
	&.active:after 
		background-color: green;
		vendor animation-name active-timer
		vendor animation-duration 20s
		vendor animation-timing-function linear
	
	
	.container
		height: 100%;
		overflow: hidden;
		position: relative;
	
	.back
		background: transparent
		border 0 none
		font-size 2em
		left 0
		position absolute
		top 0
		transform translateX(-100%)
	
	.verbiage
		bottom: 0;
		left: 0;
		margin: 0 0 100px
		position: absolute;
		font-size 1.3em
		right: 0;

	.entry
		border 1px solid transparent
		bottom: 20px;
		font-family: story-font
		font-size: 1.5em;
		height: 50px;
		left: 0;
		margin: auto;
		position: absolute;
		right: 0;
		text-align: center;
		width: 470px;
		color fore-color
		&.active
			vendor animation-name active-pulse
			vendor animation-duration 0.5s
			vendor animation-iteration-count infinite
			vendor animation-direction alternate
			&.bad
				background: red none repeat scroll 0 0;

	.join
		border: 1px solid;
		bottom: 20px;
		font-size: 2em;
		height: 55px;
		left: 0;
		padding: 0;
		position: absolute;
		right: 0;
		width: 500px;
		background contrast-color
		border 1px solid fore-color
		color back-color
		font-size: 1.5em
		font-family button-font
		border-radius: 4px
		&.hide
			display:none;
		
.verbiage
	font-family story-font
		
.access
	bottom 0
	height 20px
	position absolute
	right 0
	text-align center
	width 20px
	background-color lock-bg
	color fore-color
	transform translateY(0px)
	transition 0.25s all
	pointer-events: none;
	
	&:after
		border-bottom: 20px solid lock-bg;
		border-left: 20px solid transparent;
		content: "";
		top: -20px;
		position: absolute;
		right: 0;
		
	&:before
		border-right: 20px solid lock-bg;
		border-top: 20px solid transparent;
		content: "";
		left: -20px;
		position: absolute;
		top: 0;
		
#identity
	height 200px
	left 0
	margin auto
	position absolute
	right 0
	top 50%
	transform translateY(-50%)
	width 500px
	background back-color
	border 1px solid fore-color
	border-radius 5px
	
	.container
		padding 10px
		
	p
		font-size: 1.5em;
		text-align: center;
		font-family: button-font
	
	input
		font-family: story-font
		width: 400px;
		margin: 0 auto;
		display: block;
		height: 60px;
		text-align: center;
		font-size: 2em;